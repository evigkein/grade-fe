{
  "plugins": [
    "stylelint-order"
  ],
  "extends": [
    "stylelint-config-standard",
    "stylelint-config-prettier"
  ],
  "rules": {
    "order/order": [
      "custom-properties",
      "dollar-variables",
      "at-variables",
      "declarations",
      "rules",
      "at-rules"
    ],
    "order/properties-order": [
      "width",
      "min-width",
      "max-width",
      "height",
      "min-height",
      "max-height",
      "display",
      "flex",
      "align-content",
      "align-items",
      "align-self",
      "justify-content",
      "justify-items",
      "justify-self",
      "grid",
      "gap",
      "order",

      "position",
      "top",
      "right",
      "bottom",
      "left",
      "z-index",
      "float",
      "clear",

      "margin",
      "margin-top",
      "margin-right",
      "margin-bottom",
      "margin-left",
      "padding",
      "padding-top",
      "padding-right",
      "padding-bottom",
      "padding-left",

      "font-family",
      "color",
      "font-size",
      "font-weight",
      "font",
      "line-height",
      "text-align",
      "text-decoration",
      "text-transform",
      "white-space",
      "word-spacing",
      "letter-spacing",

      "border",
      "border-width",
      "border-style",
      "border-color",
      "border-top",
      "border-right",
      "border-bottom",
      "border-left",
      "border-radius",

      "background",
      "background-color",
      "background-image",
      "background-repeat",
      "background-position",
      "background-size",
      "vertical-align",
      "opacity",
      "box-shadow",
      "transition","border-collapse",
      "border-spacing",
      "caption-side",
      "empty-cells",
      "list-style",
      "list-style-type",
      "list-style-position",
      "list-style-image",
      "table-layout",
      "unicode-bidi",
      "direction",
      "columns",
      "column-gap",
      "column-fill",
      "column-rule",
      "column-span",
      "column-count",
      "column-width",
      "orphans",
      "widows",
      "page-break-before",
      "page-break-after",
      "page-break-inside",
      "visibility",
      "cursor",
      "pointer-events",
      "resize",
      "object-fit",
      "object-position",
      "content",
      "quotes",
      "counter-reset",
      "counter-increment",
      "will-change",
      "clip-path"
    ]
  }
}
